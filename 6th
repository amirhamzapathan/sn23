<div class="box"> 
<h3>Simple Calculator</h3> 
<input id="n1" type="number" placeholder="First number"> 
<input id="n2" type="number" placeholder="Second number"> 
<select id="op"> 
<option value="+">Add</option> 
<option value="-">Subtract</option> 
<option value="*">Multiply</option> 
<option value="/">Divide</option> 
</select> 
<button onclick="calc()">Calculate</button> 
<p id="res"></p> 
</div> 


<script> 
function calc(){ 
let a=+n1.value, b=+n2.value, o=op.value; 
res.innerText="Result: "+eval(a+o+b); 
} 
</script> 
